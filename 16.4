def validate_id(employeeID):
    initID = employeeID[3:]
    deptID = employeeID[:3]
    
    if len(employeeID) != 8:
        return False
    if not initID.isdigit() or len(initID) != 5:
        return False
    if not deptID.isupper() or len(deptID) !=3:
        return False
    else:
        return True

